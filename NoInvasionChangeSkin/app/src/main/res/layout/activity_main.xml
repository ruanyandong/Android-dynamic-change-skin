<!--        android:id="@+id/id_left_menu_container"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_gravity="start"-->
<!--        android:tag="LEFT"/>-->


</androidx.drawerlayout.widget.DrawerLayout>